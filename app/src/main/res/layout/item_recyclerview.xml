<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <CheckBox
            android:id="@+id/checkBoxRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/taskNameRecyclerView"
            android:layout_alignParentTop="true"
            android:layout_marginStart="363dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/taskNameRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/task_name_recyclerview"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hoursRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="271dp"
            android:layout_marginTop="0dp"
            android:text="@string/hours"
            android:textSize="30sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>